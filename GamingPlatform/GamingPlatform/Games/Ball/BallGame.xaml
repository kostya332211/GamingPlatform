        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ball" Height="600.91" Width="700" KeyDown="UserBlock_KeyDown" MinWidth="500" 
        Icon="/GamingPlatform;component/Assets/Ball.png">
    <Grid x:Name="MyGrid" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
