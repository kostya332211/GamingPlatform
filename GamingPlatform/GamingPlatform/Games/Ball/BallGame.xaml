        <Rectangle x:Name="UserBlock" Fill="#08ff15" Stroke="Blue" Grid.Column="0" Grid.ColumnSpan="3" RadiusX="8" RadiusY="8" Grid.Row="22"/>
        <Rectangle x:Name="Ball" Fill="#FFDE235F" RadiusY="100" RadiusX="100" Stroke="Black" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="21" Grid.RowSpan="1" Height="24" VerticalAlignment="Top"/>
    </Grid>
