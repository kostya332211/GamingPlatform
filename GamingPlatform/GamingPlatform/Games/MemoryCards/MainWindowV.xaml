<Window x:Class="GamingPlatform.Games.MemoryCards.MainWindowV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GamingPlatform.Games.MemoryCards.Views"
        xmlns:viewmodes="clr-namespace:GamingPlatform.Games.MemoryCards.ViewModels"
        xmlns:local="clr-namespace:GamingPlatform.Games.MemoryCards"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <Window.Resources>
       
        <DataTemplate DataType="{x:Type viewmodes:StartMenuVM}">
            <views:StartMenuV/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodes:GameVM}">
            <views:PlayGame/>
        </DataTemplate>
    </Window.Resources>
    <Grid >
        
        <ContentControl Content="{Binding}"/>
    </Grid>
</Window>
